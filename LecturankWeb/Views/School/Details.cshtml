@model LecturankWeb.Models.SchoolDetailsViewModel

<div class="school-profile">
    <h1 class="school-name">@Model.Name</h1>
    <p class="school-address">@Model.Address</p>

    <div class="about">
        <h3>Description</h3>
        <p>@Model.Description</p>
    </div>

    <div class="logo-image">
        <h3>Logo</h3>
        <img src="@Model.LogoImageUrl" alt="Logo Image" class="img-fluid" />
    </div>

    <div class="cover-photo">
        <h3>Cover Photo</h3>
        <img src="@Model.CoverPhotoUrl" alt="Cover Photo" class="img-fluid" />
    </div>

    <div class="extra-photos">
        <h3>Photos</h3>
        @foreach (var photo in Model.ExtraPhotos)
        {
            <img src="@photo" alt="Extra Photo" class="img-thumbnail" />
        }
    </div>

    <div class="amenities">
        <h3>Amenities</h3>
        <ul>
            @foreach (var amenity in Model.Amenities)
            {
                <li>@amenity</li>
            }
        </ul>
    </div>

    <div class="reviews">
        <h3>Reviews</h3>
        @foreach (var review in Model.Reviews)
        {
            <div class="review">
                <p>@review.Content</p>
                <small>Reviewer: @review.ReviewerName | Rating: @review.Rating</small>
            </div>
        }
    </div>
</div>

<!-- Back Button -->
<div class="mt-3">
    <button onclick="window.history.back()" class="btn btn-primary">Back</button>
</div>
