@model LecturankWeb.Models.SchoolDetailsViewModel

<div class="school-profile">
    <!-- Image Slider -->
    <div class="image-slider">
        @foreach (var photo in Model.ExtraPhotos)
        {
            <div class="slide">
                <img src="@photo" alt="Photo">
            </div>
        }
        <!-- Left and right controls -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>

    <!-- School Details Section -->
    <h1 class="school-name">@Model.Name</h1>
    <p class="school-address">@Model.Address</p>

    <div class="about">
        <h3>Overview</h3>
        <p>@Model.Description</p>
    </div>

    <div class="amenities">
        <h3>Amenities</h3>
        <div class="amenities-grid">
            @foreach (var amenity in Model.Amenities)
            {
                <div class="amenity-item">
                    <img src="https://i.postimg.cc/HW2h3CkB/Todo1.jpg" alt="Amenity Icon" />
                    <span>@amenity</span>
                </div>
            }
        </div>
    </div>

    <div class="reviews">
        <h3>Reviews</h3>
        @foreach (var review in Model.Reviews)
        {
            <div class="review">
                <p>@review.Content</p>
                <small>Reviewer: @review.ReviewerName | Rating: 
                    @for (int i = 0; i < 5; i++)
                    {
                        if (i < (int)review.Rating)
                        {
                            @:&#9733; <!-- Filled star -->
                        }
                        else
                        {
                            @:&#9734; <!-- Empty star -->
                        }
                    }
                </small>
            </div>
        }
    </div>
</div>

<!-- Back Button -->
<div class="mt-3">
    <button onclick="window.history.back()" class="btn btn-primary">Back</button>
</div>

@section Scripts {
    <script>
        let slideIndex = 0;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function showSlides(n) {
            let slides = document.getElementsByClassName("slide");
            if (n >= slides.length) {
                slideIndex = 0;
            }
            if (n < 0) {
                slideIndex = slides.length - 1;
            }
            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slides[slideIndex].style.display = "block";
        }
    </script>
}
